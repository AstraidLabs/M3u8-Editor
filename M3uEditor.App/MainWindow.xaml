<Window
    x:Class="M3uEditor.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:M3uEditor.App.ViewModels"
    xmlns:views="using:M3uEditor.App.Views"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    Title="M3u Editor">
    <Grid x:Name="Root" Background="{ThemeResource VscBackgroundBrush}">
        <Grid.KeyboardAccelerators>
            <KeyboardAccelerator Key="O" Modifiers="Control" Invoked="OnOpenInvoked" />
            <KeyboardAccelerator Key="S" Modifiers="Control" Invoked="OnSaveInvoked" />
            <KeyboardAccelerator Key="F" Modifiers="Control" Invoked="OnFindInvoked" />
            <KeyboardAccelerator Key="H" Modifiers="Control" Invoked="OnReplaceInvoked" />
            <KeyboardAccelerator Key="F3" Invoked="OnFindNextInvoked" />
        </Grid.KeyboardAccelerators>

        <Grid.Resources>
            <DataTemplate x:Key="IptvEditorTemplate" x:DataType="vm:IptvEditorViewModel">
                <views:IptvEditorView />
            </DataTemplate>

            <DataTemplate x:Key="HlsMasterEditorTemplate" x:DataType="vm:HlsMasterEditorViewModel">
                <views:HlsMasterEditorView />
            </DataTemplate>

            <DataTemplate x:Key="HlsMediaEditorTemplate" x:DataType="vm:HlsMediaEditorViewModel">
                <views:HlsMediaEditorView />
            </DataTemplate>

            <DataTemplate x:Key="DiagnosticTemplate" x:DataType="core:Diagnostic" xmlns:core="using:M3uEditor.Core">
                <Grid ColumnSpacing="12" Padding="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Background="{Binding Severity, Converter={StaticResource DiagnosticSeverityToBrushConverter}}"
                        CornerRadius="10"
                        Padding="8,2">
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="Black"
                            Text="{Binding Severity}" />
                    </Border>
                    <TextBlock Grid.Column="1" Text="{Binding Code}" Style="{StaticResource LabelTextBlockStyle}" />
                    <TextBlock Grid.Column="2" Text="{Binding Message}" TextWrapping="Wrap" />
                    <TextBlock Grid.Column="3" Text="{Binding Span.LineIndex}" HorizontalAlignment="Right" />
                </Grid>
            </DataTemplate>

            <views:EditorTemplateSelector
                x:Key="EditorTemplateSelector"
                HlsMasterTemplate="{StaticResource HlsMasterEditorTemplate}"
                HlsMediaTemplate="{StaticResource HlsMediaEditorTemplate}"
                IptvTemplate="{StaticResource IptvEditorTemplate}" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border
            Grid.Row="0"
            Background="{ThemeResource VscSurfaceBrush}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="16,10">
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="M3U Workbench" Style="{StaticResource TitleTextBlockStyle}" />
                    <Border Background="{ThemeResource VscPanelBrush}" CornerRadius="6" Padding="8,4">
                        <TextBlock Text="VS Code inspired" Style="{StaticResource LabelTextBlockStyle}" />
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                    <Button Content="Open" Command="{Binding OpenCommand}" />
                    <Button Content="Save" Command="{Binding SaveCommand}" />
                    <Button Content="Save As" Command="{Binding SaveAsCommand}" />
                    <Button Content="Find / Replace" Command="{Binding ShowFindReplaceCommand}" />
                    <Button Content="Validate" Command="{Binding ValidateCommand}" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" Spacing="2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentPath}" Style="{StaticResource LabelTextBlockStyle}" TextTrimming="CharacterEllipsis" />
                    <TextBlock Text="{Binding CurrentKind}" Foreground="{ThemeResource VscForegroundBrush}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main workbench -->
        <Grid Grid.Row="1" ColumnSpacing="0" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Activity bar -->
            <StackPanel
                Grid.Column="0"
                Background="{ThemeResource VscPanelBrush}"
                BorderBrush="{ThemeResource VscBorderBrush}"
                BorderThickness="0,0,1,0"
                VerticalAlignment="Stretch"
                Padding="8"
                Spacing="8">
                <ToggleButton
                    Content=""
                    FontFamily="Segoe Fluent Icons"
                    ToolTipService.ToolTip="Explorer"
                    IsChecked="{Binding ActiveSidebarTab, Mode=TwoWay, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Explorer}" />
                <ToggleButton
                    Content=""
                    FontFamily="Segoe Fluent Icons"
                    ToolTipService.ToolTip="Search"
                    IsChecked="{Binding ActiveSidebarTab, Mode=TwoWay, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Search}" />
                <ToggleButton
                    Content=""
                    FontFamily="Segoe Fluent Icons"
                    ToolTipService.ToolTip="Problems"
                    IsChecked="{Binding ActiveSidebarTab, Mode=TwoWay, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Problems}" />
            </StackPanel>

            <!-- Sidebar -->
            <Border
                Grid.Column="1"
                Background="{ThemeResource VscSurfaceBrush}"
                BorderBrush="{ThemeResource VscBorderBrush}"
                BorderThickness="0,0,1,0"
                Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Sidebar" Style="{StaticResource LabelTextBlockStyle}" />
                    <Grid Grid.Row="1">
                        <StackPanel
                            Visibility="{Binding ActiveSidebarTab, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Explorer}">
                            <TextBlock Text="Document" Style="{StaticResource LabelTextBlockStyle}" Margin="0,0,0,8" />
                            <StackPanel Background="{ThemeResource VscPanelBrush}" Padding="12" CornerRadius="8" Spacing="8">
                                <TextBlock Text="Path" Style="{StaticResource LabelTextBlockStyle}" />
                                <TextBlock Text="{Binding CurrentPath}" TextWrapping="Wrap" />
                                <TextBlock Text="Kind" Style="{StaticResource LabelTextBlockStyle}" />
                                <TextBlock Text="{Binding CurrentKind}" />
                                <Button Content="Validate" Command="{Binding ValidateCommand}" />
                            </StackPanel>
                        </StackPanel>

                        <views:FindReplacePanel
                            x:Name="SidebarFindPanel"
                            FocusRequestId="{Binding FocusFindRequestId, Mode=OneWay}"
                            Visibility="{Binding ActiveSidebarTab, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Search}" />

                        <StackPanel Visibility="{Binding ActiveSidebarTab, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Problems}">
                            <TextBlock Text="Problems" Style="{StaticResource LabelTextBlockStyle}" Margin="0,0,0,8" />
                            <Border
                                Background="{ThemeResource VscPanelBrush}"
                                BorderBrush="{ThemeResource VscBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <ListView
                                    ItemsSource="{Binding Diagnostics}"
                                    ItemClick="OnDiagnosticClicked"
                                    IsItemClickEnabled="True"
                                    SelectionMode="None"
                                    ItemTemplate="{StaticResource DiagnosticTemplate}" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Editor area -->
            <Grid Grid.Column="2" RowSpacing="8" Padding="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition
                        x:Name="BottomPanelRow"
                        Height="{Binding BottomPanelHeight, Mode=TwoWay, Converter={StaticResource DoubleToGridLengthConverter}}" />
                </Grid.RowDefinitions>

                <Border
                    Background="{ThemeResource VscSurfaceBrush}"
                    BorderBrush="{ThemeResource VscBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <ContentControl
                        Content="{Binding CurrentEditorVm}"
                        ContentTemplateSelector="{StaticResource EditorTemplateSelector}" />
                </Border>

                <winui:GridSplitter
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource VscBorderBrush}"
                    Height="8"
                    ResizeDirection="Rows"
                    ResizeBehavior="PreviousAndNext"
                    DragCompleted="OnBottomSplitterDragCompleted" />


                <Border
                    x:Name="BottomPanelContainer"
                    Grid.Row="2"
                    Background="{ThemeResource VscSurfaceBrush}"
                    BorderBrush="{ThemeResource VscBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="{Binding IsBottomPanelOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Background="{ThemeResource VscPanelBrush}"
                            BorderBrush="{ThemeResource VscBorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12"
                            ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bottom panel" Style="{StaticResource LabelTextBlockStyle}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <ToggleButton
                                    Content="Raw lines"
                                    IsChecked="{Binding BottomPanelTab, Mode=TwoWay, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Raw}" />
                                <ToggleButton
                                    Content="Problems"
                                    IsChecked="{Binding BottomPanelTab, Mode=TwoWay, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Problems}" />
                            </StackPanel>
                            <Border Grid.Column="2" />
                            <Button
                                Grid.Column="3"
                                Content="Collapse"
                                HorizontalAlignment="Right"
                                Click="OnToggleBottomPanel" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <views:RawLinesView
                                Visibility="{Binding BottomPanelTab, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Raw}"
                                DataContext="{Binding RawLinesViewModel}" />

                            <ListView
                                Visibility="{Binding BottomPanelTab, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Problems}"
                                ItemsSource="{Binding Diagnostics}"
                                ItemTemplate="{StaticResource DiagnosticTemplate}"
                                ItemClick="OnDiagnosticClicked"
                                IsItemClickEnabled="True"
                                SelectionMode="None" />

                            <Grid Visibility="{Binding BottomPanelTab, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Problems}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource VscMutedForegroundBrush}"
                                    Text="No problems detected"
                                    Visibility="{Binding Diagnostics.Count, Converter={StaticResource NoItemsVisibilityConverter}}">
                                    <TextBlock.Transitions>
                                        <TransitionCollection>
                                            <EntranceThemeTransition />
                                        </TransitionCollection>
                                    </TextBlock.Transitions>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <Grid
            Grid.Row="2"
            Style="{StaticResource StatusBarStyle}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding CurrentPath}" Style="{StaticResource LabelTextBlockStyle}" TextTrimming="CharacterEllipsis" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                <TextBlock Text="{Binding CurrentKind}" />
            </StackPanel>
            <Border
                Grid.Column="2"
                Background="{ThemeResource VscPanelBrush}"
                CornerRadius="10"
                Padding="10,4"
                Margin="8,0,0,0">
                <TextBlock>
                    <Run Text="{Binding Diagnostics.Count}" />
                    <Run Text=" issues" />
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</Window>
