<UserControl
    x:Class="M3uEditor.App.Views.HlsMasterEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Padding="12,8" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Bandwidth" FontWeight="SemiBold" />
                <TextBlock Grid.Column="1" Text="Resolution" FontWeight="SemiBold" />
                <TextBlock Grid.Column="2" Text="Codecs" FontWeight="SemiBold" />
                <TextBlock Grid.Column="3" Text="URI" FontWeight="SemiBold" />
            </Grid>
            <ListView
                Grid.Row="1"
                ItemsSource="{Binding Variants}"
                SelectedItem="{Binding SelectedVariant, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12,6" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Bandwidth}" />
                            <TextBlock Grid.Column="1" Text="{Binding Resolution}" />
                            <TextBlock Grid.Column="2" Text="{Binding Codecs}" />
                            <TextBlock Grid.Column="3" Text="{Binding Url}" TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8" Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="URL" Width="100" />
                <TextBox Text="{Binding SelectedVariant.Url, Mode=TwoWay}" Width="400" />
                <TextBlock Text="Bandwidth" Width="100" />
                <TextBox Text="{Binding SelectedVariant.Bandwidth, Mode=TwoWay}" Width="120" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Resolution" Width="100" />
                <TextBox Text="{Binding SelectedVariant.Resolution, Mode=TwoWay}" Width="160" />
                <TextBlock Text="Codecs" Width="80" />
                <TextBox Text="{Binding SelectedVariant.Codecs, Mode=TwoWay}" Width="220" />
            </StackPanel>
            <Button Content="Apply" Command="{Binding ApplySelectedCommand}" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</UserControl>
