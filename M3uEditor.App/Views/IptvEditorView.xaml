<UserControl
    x:Class="M3uEditor.App.Views.IptvEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Background="{ThemeResource VscSurfaceBrush}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid
                    Padding="12,8"
                    ColumnSpacing="12"
                    Background="{ThemeResource VscPanelBrush}"
                    BorderBrush="{ThemeResource VscBorderBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Title" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                    <TextBlock Grid.Column="1" Text="Group Title" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                    <TextBlock Grid.Column="2" Text="tvg-id" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                    <TextBlock Grid.Column="3" Text="URL" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                </Grid>
                <ListView
                    Grid.Row="1"
                    ItemsSource="{Binding Items}"
                    Padding="0"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12,6" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Title}" />
                                <TextBlock Grid.Column="1" Text="{Binding GroupTitle}" />
                                <TextBlock Grid.Column="2" Text="{Binding TvgId}" />
                                <TextBlock Grid.Column="3" Text="{Binding Url}" TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Background="{ThemeResource VscSurfaceBrush}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel Orientation="Vertical" Spacing="10" Padding="12">
                <TextBlock Text="Details" Style="{StaticResource LabelTextBlockStyle}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Title" Width="80" />
                    <TextBox Text="{Binding SelectedItem.Title, Mode=TwoWay}" Width="300" />
                    <TextBlock Text="Duration" Width="80" />
                    <TextBox Text="{Binding SelectedItem.Duration, Mode=TwoWay}" Width="100" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="URL" Width="80" />
                    <TextBox Text="{Binding SelectedItem.Url, Mode=TwoWay}" Width="420" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="tvg-id" Width="80" />
                    <TextBox Text="{Binding SelectedItem.TvgId, Mode=TwoWay}" Width="180" />
                    <TextBlock Text="tvg-name" Width="80" />
                    <TextBox Text="{Binding SelectedItem.TvgName, Mode=TwoWay}" Width="180" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="tvg-logo" Width="80" />
                    <TextBox Text="{Binding SelectedItem.TvgLogo, Mode=TwoWay}" Width="220" />
                    <TextBlock Text="group-title" Width="80" />
                    <TextBox Text="{Binding SelectedItem.GroupTitle, Mode=TwoWay}" Width="180" />
                </StackPanel>
                <Button Content="Apply" Command="{Binding ApplySelectedCommand}" HorizontalAlignment="Left" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
