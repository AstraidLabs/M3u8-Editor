<UserControl
    x:Class="M3uEditor.App.Views.FindReplacePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Expander Header="Find / Replace" IsExpanded="{Binding IsFindReplaceOpen, Mode=TwoWay}">
        <StackPanel Orientation="Vertical" Spacing="8" Padding="12" DataContext="{Binding FindReplaceViewModel}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Find" VerticalAlignment="Center" />
                <TextBox Width="240" Text="{Binding FindText, Mode=TwoWay}" />
                <Button Content="Find" Command="{Binding FindCommand}" />
                <Button Content="Find Next" Command="{Binding FindNextCommand}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Replace" VerticalAlignment="Center" />
                <TextBox Width="240" Text="{Binding ReplaceText, Mode=TwoWay}" />
                <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                <Button Content="Replace All" Command="{Binding ReplaceAllCommand}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="16">
                <CheckBox Content="Match case" IsChecked="{Binding MatchCase, Mode=TwoWay}" />
                <CheckBox Content="Whole word" IsChecked="{Binding WholeWord, Mode=TwoWay}" />
                <CheckBox Content="Regex" IsChecked="{Binding UseRegex, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>
    </Expander>
</UserControl>
