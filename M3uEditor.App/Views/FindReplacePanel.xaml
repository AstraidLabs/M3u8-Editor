<UserControl
    x:Class="M3uEditor.App.Views.FindReplacePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid
        Background="{ThemeResource VscPanelBrush}"
        BorderBrush="{ThemeResource VscBorderBrush}"
        BorderThickness="1"
        CornerRadius="8"
        Padding="12"
        Visibility="{Binding IsFindReplaceOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Stretch">
            <TextBlock Text="Find / Replace" Style="{StaticResource LabelTextBlockStyle}" />
            <Border Background="{ThemeResource VscSurfaceBrush}" CornerRadius="6" Padding="6,2" Margin="8,0,0,0">
                <TextBlock Text="CTRL+F / CTRL+H / F3" Style="{StaticResource LabelTextBlockStyle}" />
            </Border>
        </StackPanel>

        <Grid
            Grid.Row="1"
            Margin="0,12,0,0"
            ColumnSpacing="8"
            RowSpacing="8"
            DataContext="{Binding FindReplaceViewModel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Find" Style="{StaticResource LabelTextBlockStyle}" VerticalAlignment="Center" />
            <TextBox
                x:Name="FindTextBox"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,8,0"
                Text="{Binding FindText, Mode=TwoWay}"
                PlaceholderText="Search playlist" />
            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Spacing="6">
                <Button Content="Find" Command="{Binding FindCommand}" />
                <Button Content="Next" Command="{Binding FindNextCommand}" />
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Replace" Style="{StaticResource LabelTextBlockStyle}" VerticalAlignment="Center" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,8,0"
                Text="{Binding ReplaceText, Mode=TwoWay}"
                PlaceholderText="Replace with" />
            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Spacing="6">
                <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                <Button Content="Replace all" Command="{Binding ReplaceAllCommand}" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Orientation="Horizontal"
                Spacing="12"
                VerticalAlignment="Center"
                Margin="0,4,0,0">
                <CheckBox Content="Match case" IsChecked="{Binding MatchCase, Mode=TwoWay}" />
                <CheckBox Content="Whole word" IsChecked="{Binding WholeWord, Mode=TwoWay}" />
                <CheckBox Content="Regex" IsChecked="{Binding UseRegex, Mode=TwoWay}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
