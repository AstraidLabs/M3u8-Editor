<UserControl
    x:Class="M3uEditor.App.Views.HlsMediaEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
            <TextBlock Text="Header tags:" VerticalAlignment="Center" />
            <ItemsControl ItemsSource="{Binding HeaderTags}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="4" Padding="4" Margin="4">
                            <TextBlock Text="{Binding}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <controls:DataGrid Grid.Row="1" ItemsSource="{Binding Segments}" SelectedItem="{Binding SelectedSegment, Mode=TwoWay}" AutoGenerateColumns="False">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Duration" Binding="{Binding Duration, Mode=TwoWay}" Width="*" />
                <controls:DataGridTextColumn Header="Title" Binding="{Binding Title, Mode=TwoWay}" Width="2*" />
                <controls:DataGridTextColumn Header="URI" Binding="{Binding Uri, Mode=TwoWay}" Width="3*" />
                <controls:DataGridTextColumn Header="Tags" Binding="{Binding LeadingTagsDisplay}" Width="2*" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
        <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="8" Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Duration" Width="100" />
                <TextBox Text="{Binding SelectedSegment.Duration, Mode=TwoWay}" Width="120" />
                <TextBlock Text="Title" Width="60" />
                <TextBox Text="{Binding SelectedSegment.Title, Mode=TwoWay}" Width="320" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="URI" Width="100" />
                <TextBox Text="{Binding SelectedSegment.Uri, Mode=TwoWay}" Width="420" />
            </StackPanel>
            <Button Content="Apply" Command="{Binding ApplySelectedCommand}" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</UserControl>
