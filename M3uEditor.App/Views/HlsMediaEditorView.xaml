<UserControl
    x:Class="M3uEditor.App.Views.HlsMediaEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Background="{ThemeResource VscSurfaceBrush}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Header tags:" VerticalAlignment="Center" Style="{StaticResource LabelTextBlockStyle}" />
                <ItemsControl ItemsSource="{Binding HeaderTags}" Margin="8,0,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Background="{ThemeResource VscPanelBrush}"
                                BorderBrush="{ThemeResource VscBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="6"
                                Margin="4,0">
                                <TextBlock Text="{Binding}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Background="{ThemeResource VscSurfaceBrush}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid
                    Padding="12,8"
                    ColumnSpacing="12"
                    Background="{ThemeResource VscPanelBrush}"
                    BorderBrush="{ThemeResource VscBorderBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Index" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                    <TextBlock Grid.Column="1" Text="Duration" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                    <TextBlock Grid.Column="2" Text="Title" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                    <TextBlock Grid.Column="3" Text="URI" FontWeight="SemiBold" Foreground="{ThemeResource VscMutedForegroundBrush}" />
                </Grid>
                <ListView
                    Grid.Row="1"
                    ItemsSource="{Binding Segments}"
                    Padding="0"
                    SelectedItem="{Binding SelectedSegment, Mode=TwoWay}"
                    SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12,6" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding ExtInfLineIndex}" />
                                <TextBlock Grid.Column="1" Text="{Binding Duration}" />
                                <TextBlock Grid.Column="2" Text="{Binding Title}" />
                                <TextBlock Grid.Column="3" Text="{Binding Uri}" TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            Background="{ThemeResource VscSurfaceBrush}"
            BorderBrush="{ThemeResource VscBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel Orientation="Vertical" Spacing="10" Padding="12">
                <TextBlock Text="Segment details" Style="{StaticResource LabelTextBlockStyle}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Duration" Width="100" />
                    <TextBox Text="{Binding SelectedSegment.Duration, Mode=TwoWay}" Width="120" />
                    <TextBlock Text="Title" Width="60" />
                    <TextBox Text="{Binding SelectedSegment.Title, Mode=TwoWay}" Width="320" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="URI" Width="100" />
                    <TextBox Text="{Binding SelectedSegment.Uri, Mode=TwoWay}" Width="420" />
                </StackPanel>
                <Button Content="Apply" Command="{Binding ApplySelectedCommand}" HorizontalAlignment="Left" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
