<Application
    x:Class="M3uEditor.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:M3uEditor.App"
    xmlns:converters="using:M3uEditor.App.Converters"
    xmlns:winui="using:Microsoft.UI.Xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- VS Code inspired palette -->
            <SolidColorBrush x:Key="VscBackgroundBrush" Color="#FF1F2430" />
            <SolidColorBrush x:Key="VscSurfaceBrush" Color="#FF262C36" />
            <SolidColorBrush x:Key="VscPanelBrush" Color="#FF2F3542" />
            <SolidColorBrush x:Key="VscBorderBrush" Color="#FF3E4451" />
            <SolidColorBrush x:Key="VscForegroundBrush" Color="#FFE6E6E6" />
            <SolidColorBrush x:Key="VscMutedForegroundBrush" Color="#FF9DA5B4" />
            <SolidColorBrush x:Key="VscAccentBrush" Color="#FF3BAFDA" />
            <SolidColorBrush x:Key="VscErrorBrush" Color="#FFE16F7E" />
            <SolidColorBrush x:Key="VscWarningBrush" Color="#FFE8C07D" />
            <SolidColorBrush x:Key="VscInfoBrush" Color="#FF6CB4FF" />

            <!-- Converters -->
            <converters:EnumEqualsConverter x:Key="EnumEqualsConverter" />
            <converters:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter" />
            <converters:DiagnosticSeverityToBrushConverter
                x:Key="DiagnosticSeverityToBrushConverter"
                ErrorBrush="{StaticResource VscErrorBrush}"
                WarningBrush="{StaticResource VscWarningBrush}"
                InfoBrush="{StaticResource VscInfoBrush}" />
            <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
            <converters:CountToVisibilityConverter x:Key="HasItemsVisibilityConverter" />
            <converters:CountToVisibilityConverter x:Key="NoItemsVisibilityConverter" Invert="True" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <!-- Typography -->
            <FontFamily x:Key="MonoFontFamily">Consolas</FontFamily>

            <!-- Text styles -->
            <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{StaticResource VscForegroundBrush}" />
            </Style>

            <Style x:Key="LabelTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="{StaticResource VscMutedForegroundBrush}" />
            </Style>

            <Style x:Key="MonoTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
                <Setter Property="Foreground" Value="{StaticResource VscForegroundBrush}" />
            </Style>

            <!-- Command surfaces -->
            <Style TargetType="CommandBar">
                <Setter Property="Background" Value="{StaticResource VscSurfaceBrush}" />
                <Setter Property="Foreground" Value="{StaticResource VscForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource VscBorderBrush}" />
                <Setter Property="BorderThickness" Value="0,0,0,1" />
                <Setter Property="Padding" Value="12,8" />
            </Style>

            <Style TargetType="AppBarButton">
                <Setter Property="Foreground" Value="{StaticResource VscForegroundBrush}" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Margin" Value="4,0" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Width" Value="96" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style TargetType="ListViewItem">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{StaticResource VscForegroundBrush}" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <ListViewItemPresenter
                                ContentTransitions="{TemplateBinding ContentTransitions}"
                                SelectionCheckMarkVisualEnabled="False"
                                CheckBrush="{ThemeResource VscAccentBrush}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                SelectedBackground="#222C7CFF"
                                SelectedBorderBrush="{StaticResource VscAccentBrush}"
                                PointerOverBackground="#11FFFFFF"
                                PointerOverBorderBrush="{StaticResource VscBorderBrush}" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Inputs -->
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource VscSurfaceBrush}" />
                <Setter Property="Foreground" Value="{StaticResource VscForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource VscBorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="SelectionHighlightColor" Value="{StaticResource VscAccentBrush}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource VscAccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="{StaticResource VscBorderBrush}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="12,6" />
            </Style>

            <!-- Status bar -->
            <Style x:Key="StatusBarStyle" TargetType="Grid">
                <Setter Property="Background" Value="{StaticResource VscSurfaceBrush}" />
                <Setter Property="Padding" Value="12,4" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
